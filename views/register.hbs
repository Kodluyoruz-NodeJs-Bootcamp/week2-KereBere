<h2>
    Register New User
</h2>
<form action="/auth/register" class="register-form" method="post">
    <label for="name">Name</label>
    <input type="name" name="name" placeholder="Enter Name" value="{{{name}}}">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="Enter Email" value="{{{email}}}">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="Enter a password" value="{{{password}}}">
    <label for="password">Password</label>
    <input type="password" name="password2" id="password2" placeholder="Confirm Password" value="{{{password2}}}">
    <button type="submit">Register</button>
    {{> message }}